<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/maunen"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingTop="100dp"
    android:paddingLeft="32dp"
    android:paddingRight="32dp">

    <!-- Icon khóa -->
    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_key"
        android:layout_marginBottom="16dp"/>

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"/>

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your password length consists of 6-characters"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <!-- Ô nhập mật khẩu -->
    <EditText
        android:id="@+id/changepassword_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Password"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/edittext"
        android:drawableStart="@drawable/ic_eye"
        android:paddingStart="16dp"
        android:drawablePadding="5dp"
        android:paddingEnd="48dp"
        android:inputType="textPassword"
        android:layout_marginBottom="16dp"/>


    <!-- Ô nhập mật khẩu mới -->
    <EditText
        android:id="@+id/changepassword_newpassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="New Password"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/edittext"
        android:drawableStart="@drawable/ic_eye"
        android:paddingStart="16dp"
        android:drawablePadding="5dp"
        android:paddingEnd="48dp"
        android:inputType="textPassword"
        android:layout_marginBottom="16dp"/>


    <!-- Ô xác nhận  mật khẩu -->
    <EditText
        android:id="@+id/changepassword_confirmpassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Confirm Password"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/edittext"
        android:drawableStart="@drawable/ic_eye"
        android:paddingStart="16dp"
        android:drawablePadding="5dp"
        android:paddingEnd="48dp"
        android:inputType="textPassword"
        android:layout_marginBottom="16dp"/>

    <!-- Nút Create Account-->
    <Button
        android:id="@+id/register_btn_createaccount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Save password"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/button"
        android:layout_marginBottom="16dp"/>





</LinearLayout>
